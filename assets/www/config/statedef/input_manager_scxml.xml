    </onentry>
   </state>
   
   <state id="discard_appointment" name="discard_appointment"><!--   node-size-and-position x=1010.0 y=250.0 w=100.0 h=20.0  -->
    <onentry>
     <script>
		       mobileDS.DialogEngine.getInstance().raiseEvent(&#039;touch_end_on_discard_appointment_btn&#039;); 
		     </script>
    </onentry>
   </state>
   
  </state>
 </state>
</scxml>