<!DOCTYPE html>
<html>
    <head>
     	@style( "jqm-extentions" )
        @style( "application")
        @style( "flags")
        
        <!-- 
        	this comment will be ignored:
        	upon parsing all HTML comment will be removed before processing the content.
         -->
         
    </head>
    <body>
    
        <div id="pageContainer" data-role="page" class="type-interior" data-url="pageContainer" data-cache="false" >
            
            <div id="pageHeader" data-role="header" data-position="fixed" style="height:50px; vertical-align: middle;">
              @yield("header")
            </div>
            
            <div id="pageContent" data-role="content">
              @yield("content")	
            </div>
            
            <div id="pageFooter" data-role="footer" data-position="fixed" >
              <div id="mic_button" class="round footer_button mic_button" onclick="micClick()">
			    <img src="content/images/mic.png" width="50" height="50" style="left:3px; position:relative; top:2px;"></img>
			  </div>
		      @yield('footer')
            </div>
            
        </div>
        
    </body>
    
    <dialogs>
    	@yield('dialogs')
    </dialogs>
</html>
